<MudDialog>
    <DialogContent>
        <MudContainer>
            <MudTable Items="@lstTransacciones" Hover="true" Breakpoint="Breakpoint.Sm">
                <HeaderContent>
                    <MudTh>Nombre titular</MudTh>
                    <MudTh>Numero de cuenta</MudTh>
                    <MudTh>Tipo transaccion</MudTh>
                    <MudTh>Monto</MudTh>
                    <MudTh>Forma de pago</MudTh>
                    <MudTh>Fecha</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>@context.nombresCliente</MudTd>
                    <MudTd>@context.numeroCuenta</MudTd>
                    <MudTd>@context.tipoTransaccion</MudTd>
                    <MudTd>@context.monto</MudTd>
                    @if (context.idTipoTransaccion == 3)
                    {
                        <MudTd></MudTd>
                    }
                    else
                    {
                        <MudTd>@context.formaPago</MudTd>
                    }
                    <MudTd>@context.fechaCreacion</MudTd>
                </RowTemplate>
            </MudTable>        
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="Cancel">Cerrar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public List<Transaccion> lstTransacciones { get; set; } = new List<Transaccion>();

    [CascadingParameter]
    public MudDialogInstance? MudDialog { get; set; }

    private void Cancel() => MudDialog?.Cancel();

   
}
